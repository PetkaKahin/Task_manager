{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "resources/js/**/*",
        "resources/**/*.d.ts",
        "resources/js/shims-vue.d.ts",
        "resources/js/**/*.vue",
    ],
    "exclude": [
        "src/**/__tests__/*",
        "node_modules"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
            "@scss/*": ["resources/scss/*"],
        },
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "vite/client",
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    }
}
